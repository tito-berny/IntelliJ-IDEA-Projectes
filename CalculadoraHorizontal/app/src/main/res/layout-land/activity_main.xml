<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.infot.calculadorahorizontal.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/label_resultat"
                android:ems="10"
                android:id="@+id/editTextResultat" android:gravity="center"
                android:textSize="14sp" android:focusable="false"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/textViewPanel" android:textSize="16sp" android:focusable="false"
                android:textAlignment="center" android:textColor="@android:color/background_dark"
                android:gravity="bottom"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical|center_horizontal|center"
            android:layout_marginBottom="23dp" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton1"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton2"
                android:background="@drawable/animacion"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton3"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton4"
                android:background="@drawable/animacion"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton5"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton6"
                android:background="@drawable/animacion"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton7"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton8"
                android:background="@drawable/animacion"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton9"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/buttonC"
                android:background="@drawable/animacion"/>
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/boton0"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="bottom|right"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp" android:gravity="bottom">
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/botonmas" android:layout_weight="1"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/botonmenos" android:layout_weight="1"/>
            <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/botonmultiplicar" android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/botondividir" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="="
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/botonigual"/>
        <CheckBox
                android:text="On/Off"
                android:layout_width="wrap_content"
                android:layout_height="21dp" android:id="@+id/checkBoxOn" android:checked="true"/>
    </LinearLayout>
</RelativeLayout>
